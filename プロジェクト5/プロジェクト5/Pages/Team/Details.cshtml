@page
@model プロジェクト5.Pages.Team.DetailsModel

<div>
    <h4>Detalles del equipo @Model.Equipo.NomEquip</h4>
    <hr />
    @if (Model.Equipo.CreatedAT != null)
    {
        var imgPath = $"~/images/{(string.IsNullOrEmpty(Model.Equipo.Logo) ? "" : Model.Equipo.Logo)}";
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Equipo.Logo)
            </dt>
            <dd class="col-sm-10">
                <img src="@imgPath" asp-append-version="true" width="100" height="100">
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Equipo.NomEquip)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Equipo.NomEquip)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Equipo.Status)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Equipo.Status == true)
                {
                    <p>Activo</p>
                }
                else
                {
                    <p>Inactivo</p>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Equipo.CreatedAT)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Equipo.CreatedAT)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Equipo.UpdatedAT)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Equipo.UpdatedAT)
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-page="./Equipos">Volver a Equipos</a>
</div>
