@page
@model プロジェクト5.Pages.Team.EquiposModel
@{
    ViewData["Title"] = "Equipos";
}

<h2>Equipos</h2>
<a asp-page="./AgregarEquipo" class="btn btn-primary m-2" role="button">Agregar Equipo</a>
<div class="card-deck">
    @foreach (var item in Model.Equipos)
    {
        var imgPath = $"~/images/{(string.IsNullOrEmpty(item.Logo) ? "" : item.Logo)}";
        <div class="card bg-light m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h4>@item.NomEquip</h4>
            </div>
            <img class="card-img-top img-thumbnail imgThumbnail" src="@imgPath"
                 alt="@item.CreatedAT" asp-append-version="true">
            <div class="card-body">
                <h5 class="card-title" dis>@item.CreatedAT</h5>
                <p class="card-text">
                    <ul>
                        @if (item.Status == true)
                        {
                            <li>Estatus: Activo</li>
                        }
                        else
                        {
                            <li>Estatus: Inactivo</li>
                        }
                        <li>Actualizado: @item.UpdatedAT</li>
                    </ul>
                </p>
            </div>
            <div class="card-footer text-center">
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary m-1">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary m-1">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">Eliminar</a>
            </div>
        </div>
    }
</div>